generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model Student {
  id        Int      @id @default(autoincrement())
  fullName      String
  email     String   @unique
  telphone  Int      @unique
  NIF       String   @unique
  school    String
  Year      String
  Turno     String
  AreaInterest String
  skills   String?
  password  String
  createdAt DateTime @default(now())
}

model Company {
  id  Int @id @default(autoincrement())
  name String @unique
  nif String @unique
  description String?
  segment String
  size String
  website String?
  email String @unique
  telphone String @unique
  responsavelName String?
  role  String
  password String
  address String
  city String
  Province String

  createdAt DateTime @default(now())
}